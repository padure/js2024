extends layout

block content
  .container.my-5  
    h3 Lista cartilor
    table.table.table-bordered.table-hover
      thead 
        tr 
          th #
          th Nume
          th Autor
          th Pagini
          th Pret
          th Optiuni
      tbody
        each book in books
          tr 
            td #{book.id}
            td #{book.nume}
            td #{book.autor}
            td #{book.pagini}
            td #{book.pret}
            td
              a.btn.btn-danger.btn-sm.me-1(href='/carti/id:') Delete
              a.btn.btn-warning.btn-sm.text-white(href='/carti/edit/id:') Edit
